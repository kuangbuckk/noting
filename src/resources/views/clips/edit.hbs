<div class="mt-4">
    <h3>Edit clip information</h3>
    
    <form class="mt-4" method="POST" action="/clips/{{clip._id}}?_method=PUT">
        <div class="form-group mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" value="{{clip.name}}" id="name" placeholder="">
        </div>
        <div class="form-group mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="description" class="form-control" id="description" placeholder="">{{clip.description}}</textarea>
        </div>
        <div class="form-group mb-3">
            <label for="videoId" class="form-label">videoId</label>
            <input type="text" name="videoId" class="form-control"  value="{{clip.videoId}}" id="videoId" placeholder="">
        </div>
        <div class="form-group mb-3">
            <label for="major" class="form-label">Major</label>
            <input type="text" name="major" class="form-control"  value="{{clip.major}}" id="major" placeholder="">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Save</button>
        </div>
    </form>
</div>