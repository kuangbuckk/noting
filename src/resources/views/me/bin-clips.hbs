<div class="mt-4">
    <div>
        <a href="\me/stored/clips"><i class="fa-solid fa-arrow-left"></i> Back</a>
        <h3>Deleted clips</h3>
    </div>
    
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Major</th>
                <th scope="col" colspan="2">Deleted time</th>
            </tr>
        </thead>
        <tbody>
            {{#each clips}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.major}}</td>
                <td>{{this.deletedAt}}</td>
                <td>
                    <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Restore</a>
                    <a class="btn btn-danger" data-toggle="modal" data-id="{{this._id}}"
                        data-target="#delete-clip-modal">Delete permantly</a>
                </td>
            </tr>

            {{else}}
                <tr>
                    <td colspan="5" class="text-center">No clips deleted. <a href="\me/stored/clips">Back</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Confirm delete clips--}}
<div id="delete-clip-modal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">x</button>
            </div>
            <div class="modal-body">
                <p>Delete the clip permantly? This can't be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button id="btn-delete-clip" type="button" class="btn btn-danger" data-dismiss="modal">Yes</button>
            </div>
        </div>
    </div>
</div>

{{!-- Delete hidden form --}}
<form method="POST" name="delete-clip-form"></form>
<form method="POST" name="restore-clip-form"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var clipId;
        var deleteForm = document.forms['delete-clip-form'];
        var restoreForm = document.forms['restore-clip-form'];
        var btnDeleteClip = document.getElementById('btn-delete-clip');

        //loop through every btns without for loop
        var btnRestore = $('.btn-restore');

        //When dialog confirm clicked
        $('#delete-clip-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            clipId = button.data('id');
            console.log(clipId);
        });

        //When click delete
        btnDeleteClip.onclick = function () {
            deleteForm.action = '/clips/' + clipId + '/force?_method=DELETE';
            deleteForm.submit();
        }

        btnRestore.click(function (e) {
            e.preventDefault(); //bỏ hành vi mặc định của html của thẻ a

            var clipId = $(this).data('id');
            restoreForm.action = '/clips/' + clipId + '/restore?_method=PATCH';
            restoreForm.submit();
        })
    });

</script>